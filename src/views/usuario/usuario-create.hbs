<div class="row mt-4">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h3>Registrar Usuario</h3>
            </div>
            <div class="card-body">
                <form action="/store-usuario" method="post">
                    <div class="my-3">
                        <label for="nombre">Nombre</label>
                        <input class="form-control" id="nombre" name="nombre" type="text" placeholder="Nombre">
                    </div>

                    <div class="my-3">
                        <label for="cuenta">Cuenta</label>
                        <input class="form-control" id="cuenta" name="cuenta" type="text" placeholder="Cuenta">
                    </div>

                    <div class="my-3">
                        <label for="password">Contraseña</label>
                        <input class="form-control" id="password" name="password" type="password" placeholder="Contraseña">
                    </div>

                    <div class="my-3">
                        <label for="rol">Rol</label>
                        <select name="rol" id="rol" class="form-control form-select">
                            <option value="Administrador">Administrador</option>
                            <option value="Cajero">Cajero</option>
                        </select>
                    </div>

                    <div class="text-end">
                        <input class="btn btn-primary" type=submit value="INGRESAR">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>